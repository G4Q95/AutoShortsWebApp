# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# ElevenLabs API
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Cloudflare R2
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL for CORS (for production)
FRONTEND_URL=https://your-frontend-url.com

# Backend API URL (for frontend to use)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Cloudflare Workers Configuration
CF_WORKER_URL=https://r2-delete-worker.yourdomain.workers.dev
CF_WORKER_API_TOKEN=your_worker_api_token
USE_WORKER_FOR_DELETION=false 