{
  "name": "auto-shorts-web-app",
  "version": "1.0.0",
  "description": "A web application for creating short videos from social media content",
  "scripts": {
    "frontend": "cd web/frontend && npm run dev",
    "backend": "cd web/backend && python -m app.main",
    "browser-tools": "npx browser-tools-server",
    "stop": "echo 'To stop all processes, press Ctrl+C'",
    "killports": "npx kill-port 3000 8000 8555 3025 3026",
    "dev": "node scripts/dev.js",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd"
  },
  "dependencies": {
    "@agentdeskai/browser-tools-server": "^1.2.0",
    "express": "^4.21.2",
    "videocontext": "^0.54.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "fastmcp": "^1.20.5",
    "figlet": "^1.8.0",
    "fuse.js": "^7.0.0",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "openai": "^4.89.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "wait-on": "^7.2.0"
  },
  "type": "module"
}